<% layout('layout') -%>
<% script('js/editproject.js') -%>

<div id="projectCarousel" class="carousel slide" data-ride="carousel">
    <ol id="carouselList" class="carousel-indicators"></ol>
    
    <div id="carouselImages" class="carousel-inner"></div>
    
    <a class="carousel-control-prev" href="#projectCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#projectCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

<div id="notification" class="container text-center p-3"></div> 

<div class="container p-3">
    <ul class="list-group">
        <li class="list-group-item active">Añadir imágenes al carrusel</li>
        <li class="list-group-item">
            <form id="uploadCarousel" enctype="multipart/form-data">
                <input type="hidden" name="type" value="carousel">
                <input id="carouselImage" title="Añadir imagen" type="file" name="file">
                <input class="btn btn-primary" type="submit" name="submit" title="Añadir imagen" value="Añadir imagen" disabled>
            </form>
        </li>
        <li class="list-group-item active">Cambiar el logo del proyecto</li>
        <li class="list-group-item">
            <form id="uploadLogo" enctype="multipart/form-data">
                <input type="hidden" name="type" value="logo">
                <input id="logo" title="Añadir imagen" type="file" name="file">
                <input class="btn btn-primary" type="submit" name="submit" title="Cambiar logo" value="Cambiar logo" disabled>
            </form>
        </li>
        <li class="list-group-item active">Añadir nuevos desarrolladores</li>
        <li class="list-group-item">
            <form id="addDevs">
                    <div class="form-group row">
                        <label for="username" class="col-sm-2 col-form-label">Nuevo usuario</label>
                        <div class="col-sm-4">
                            <input id="user" type="text" class="form-control" name="username" placeholder="Nombre de usuario" required></input>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">Correo electrónico</label>
                        <div class="col-sm-4">
                            <input id="email" type="email" class="form-control" name="email" placeholder="Correo electrónico"  required></input>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-2 col-form-label">Contraseña</label>
                        <div class="col-sm-4">
                            <input id="password" type="password" class="form-control" name="password" placeholder="Contraseña" required></input>
                        </div>
                        <div class="col-sm-4">
                            <input id="repeatPassword" type="password" class="form-control" name="repeatPassword" placeholder="Repetir contraseña" required></input>
                        </div>
                    </div>
                    <input class="btn btn-primary" type="submit" name="submit" title="Añadir desarrollador" value="Añadir desarrollador">
            </form>
        </li>
    </ul>
</div>

<nav class="navbar navbar-expand-sm bg-light navbar-light">
    <a id="projectName" class="navbar-brand">Nombre del proyecto</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/updates">Noticias & eventos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/feedbacks">Comentarios & opiniones</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/outside">Enlaces externos</a>
        </li>
    </ul>
</nav> 

<div class="jumbotron jumbotron-fluid">
    <button id="edition" type="button" class="btn btn-warning" title="Editar">Editar <i class="fas fa-pencil-alt"></i></button>
    <form id="updateProject" class="m-3" hidden>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label">Nuevo título del proyecto</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="title">
            </div>
        </div>
        <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">Nueva descripción del proyecto</label>
            <div class="col-sm-8">
                <textarea type="text" class="form-control" name="description" rows="10"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="tags" class="col-sm-2 col-form-label">Nuevas etiquetas del proyecto</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="tags">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="tags" class="col-sm-2 col-form-label">Acciones</label>
            <div class="col-sm-4">
                <input class="btn btn-success" type="submit" name="submit" title="Añadir imagen" value="Guardar cambios">
                <input id="cancelJumbotron" class="btn btn-danger" name="cancel" title="Cancelar" value="Cancelar">
            </div>
        </div> 
    </form>
    <div id="jumbotroncontent" class="container">
        <h1 id="title" class="text-center"></h1>      
        <p id="description"></p>
        <div id="tags" class="container text-center"></div> 
    </div>
</div>

